<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !current_user || current_user&.chef == false %>
        <li class="nav-item">
          <%= link_to "Become a Chef", new_chef_path, class: "nav-link" %>
        </li>
      <% else %>
      <% end %>
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Profile", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>


<div class="cards" id="grid">
  <% @chefs.each do |chef| %>
  <div class="card">
  <img class="avatar-large mx-3 my-3" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm"/>
  <div class="card-details">
    <p><%= chef.name %></p>
    <div class="rating d-flex flex-row">
     <% chef.rating.to_i.times do %>
    <i class="fas fa-star"> </i>

    <% end %>
    </div>
  </div>
  <%= link_to "see more", chef_path(chef), class: "nav-link align-self-end" %>
  </div>
  <% end %>
</div>

