<div class="chef-show-page">
<div class="container-show">
  <div class="chef-user d-flex align-items-center flex-column mx-3 my-2">
    <img class="avatar-large" alt="avatar-large" src=" <%= @chef.user.image %> "/>
    <%= link_to "book", new_chef_booking_path(@chef), class: "btn-primary", id: "btn-chef-show" %>
  </div>
  <div class="container-profile-details">
    <h4 class="ml-3 my-3">Hi I'm <%= @chef.name %></h4>
    <p class="rating-text ml-3 my-3"> <%= @chef.description %></p>
    <br>
  <div class="reviews ml-3 my-3">
    <h4>My Reviews</h4>
      <br>
      <% @bookings.each do |booking|%>
        <% booking.reviews.each do |review|%>
        <div class="card-review">
          <div>
            <img class="avatar-small" src="<%= review.user.image %>" alt="user image">
            <strong>Rating:</strong>
            <% if review.rating %>
            <% review.rating.times do %>
             <i class="fa fa-star" aria-hidden="true" ></i>
            <% end %>
            <% end %>
          </div>
          <p class="rating-text"> <%= review.content %> </p>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
</div>
